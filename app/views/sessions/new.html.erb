<div class="welcome-wrapper">
	<div class="splash-hello"> Hello </div>
	<div class="login-form ">
		<form action="/session" method="post">
		  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		  <label>
		    <input name="user[email]" class="custom-login" value="Username" type="text"><br>
		  </label><br>
		  <label>
		    <input name="user[password]" class="custom-login" value="Password" type="password"><br>
		  </label><br>
		  <input type="submit" value="Submit" class="btn btn-primary custom-login"><br>
		</form>
	</div>
</div>
